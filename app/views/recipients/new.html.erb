<div class="sign-up-container">
  <h2>Add Recipient</h2>
  <%= form_for [@recipient.user, @recipient] do |f| %>
    <div class="form-group">
    <%= f.hidden_field :user_id, value: session[:user_id] %><br>
    </div>
    <div class="form-group">
    <%= f.label :name%>
    </div>
    <div class="form-group">
    <%= f.text_field :name %><br>
    </div>
    <div class="form-group">
    <%= f.label :email %>
    </div>
    <div class="form-group">
    <%= f.text_field :email %><br>
    </div>
    <%= f.submit %>
  <% end %>
</div>
